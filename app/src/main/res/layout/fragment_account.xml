<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="32dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/welcome"
            style="@style/HeadingTextStyle_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome, Admin"
            tools:ignore="HardcodedText" />

        <TextView
            style="@style/NormalTextStyle_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Manage your shop and view orders."
            tools:ignore="HardcodedText" />

    </LinearLayout>


    <LinearLayout

        android:id="@+id/contact_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"

            tools:ignore="UselessLeaf">

            <ImageView
                style="@style/NormalTextStyle_grey"
                android:layout_width="24dp"
                android:layout_height="24dp"

                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:src="@drawable/call_icon"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:orientation="vertical">

                <TextView
                    style="@style/HeadingTextStyle_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:text="Contact Us"
                    tools:ignore="HardcodedText" />

                <TextView
                    style="@style/SmallTextStyle_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Assistance with your current inventory or sales"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <ImageView
                style="@style/NormalTextStyle_grey"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center|end"
                android:src="@drawable/right_arrow"
                app:tint="@color/grey"
                tools:ignore="ContentDescription" />

        </LinearLayout>
    </LinearLayout>
    <!-- Terms and conditions-->
    <LinearLayout
        android:id="@+id/terms_and_conditions"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_cv"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/terms_and_conditions_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/NormalTextStyle_grey"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/terms"
                    app:tint="@color/grey"
                    tools:ignore="ContentDescription" />

                <TextView
                    style="@style/HeadingTextStyle_black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:text="Terms and Conditions"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/NormalTextStyle_grey"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/terms"
                    app:tint="@color/grey"
                    tools:ignore="InefficientWeight" />

                <TextView
                    style="@style/HeadingTextStyle_black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:text="Privacy Policy"
                    android:textColor="@color/black"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/NormalTextStyle_grey"
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    android:src="@drawable/terms"
                    app:tint="@color/grey" />

                <TextView
                    style="@style/HeadingTextStyle_black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:text="@string/admin_information"
                    android:textColor="@color/black"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/NormalTextStyle_grey"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/login"
                    app:tint="@color/grey"
                    tools:ignore="InefficientWeight" />

                <TextView
                    android:id="@+id/account_settings"
                    style="@style/HeadingTextStyle_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:text="@string/account_settings"
                    android:textColor="@color/black"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>