<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">



                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_imgCI"
                        app:civ_border_width="0dp"
                        android:src="@drawable/account_icon"
                        android:tint="@color/black"
                        app:civ_border_color="#FF000000"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        tools:ignore="MissingClass" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/shop_name"
                            style="@style/NormalTextStyle_black"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="shopName"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/address"
                        style="@style/SmallTextStyle_grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="2dp"
                        android:text="@string/shop_address"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/view"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_weight="0.05"
                    android:tint="@color/black"
                    android:src="@drawable/right_arrow"
                    tools:ignore="ContentDescription,NestedWeights,UseAppTint" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical"
                        tools:ignore="NestedWeights">

                        <TextView

                            style="@style/SmallTextStyle_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name :"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:id="@+id/name"
                            style="@style/SmallTextStyle_black"
                            android:layout_width="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_height="wrap_content"
                            android:textColor="@color/violet" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        tools:ignore="NestedWeights">
                        <TextView
                            style="@style/SmallTextStyle_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gst_number"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/gst_number"
                            style="@style/SmallTextStyle_black"
                            android:layout_width="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_height="match_parent"
                            android:textColor="@color/violet"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical">

                        <TextView

                            style="@style/SmallTextStyle_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mobile_number1"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/mobile_number"
                            style="@style/SmallTextStyle_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/violet"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical">

                        <TextView

                            style="@style/SmallTextStyle_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/email"
                            android:maxLines="1"
                            android:ellipsize="end"
                            style="@style/SmallTextStyle_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/violet"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:baselineAligned="false">

                      <TextView
                          android:id="@+id/approved"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:background="@drawable/button_bg_green"
                          style="@style/NormalTextStyle_white"
                          android:text="@string/accept"
                          android:padding="3dp"
                          android:gravity="center"
                          android:textStyle="bold"
                          tools:ignore="ContentDescription,NestedWeights,UseAppTint" />

                    <TextView
                        android:id="@+id/rejected"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_bg_red"
                        style="@style/NormalTextStyle_white"
                        android:layout_marginTop="7dp"
                        android:text="Reject"
                        android:textStyle="bold"
                        android:padding="3dp"
                        android:gravity="center"
                        tools:ignore="ContentDescription,NestedWeights,UseAppTint" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>